@model todo_aspnetmvc_ui.ViewModels.LoginModel

@{
    Layout = "_LayoutLogin";
}

<div class="login">
    <div class="header">
        <a class="header" href="/Account/Login">TODOCKER</a>
    </div>
    <div class="form">
        <div class="content">
            <div class="sign-in-form">
                <div class="sign-in-text">
                    <h3 class="sign-in-text">Sign In</h3>
                    <p class="sign-in-text">Sign in to stay connected.</p>
                </div>
                <form class="sign-form" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="sign-data">
                        <div class="form-gr">
                            <label class="form-gr" asp-for="Email">Email</label>
                            <input class="form-gr" type="text" asp-for="Email" />
                            <span asp-validation-for="Email" />
                        </div>
                        <div class="form-gr">
                            <label class="form-gr" asp-for="Password">Password</label>
                            <input class="form-gr" asp-for="Password" />
                            <span asp-validation-for="Password" />
                        </div>
                        <div class="remember">
                            <div class="check-remember">
                                <input class="check-remember" type="checkbox" asp-for="RememberMe"/>
                                <p class="check-remember">Remember me?</p>
                            </div>
                            <a class="remember" asp-action="Login" asp-controller="Account">Forgot Password</a>
                        </div>
                    </div>
                    <button class="btn sign-form" type="submit">
                        <p class="sign-form">Sign in</p>
                    </button>
                </form>
            </div>
            <div class="register">
                <p class="register">Don’t have an account? </p>
                <a class="register" asp-action="Register" asp-controller="Account">Click here to sign up.</a>
            </div>
        </div>
    </div>
</div>

<div class="img-login-page">
    <figure class="img-login-page">
        <img class="img-login-page" src="~/media/side-account.jpg" />
    </figure>
</div>
